          <version>4.1.5</version>
        </dependency>
        <dependency>
            <groupId>avalon-logkit</groupId>
            <artifactId>avalon-logkit</artifactId>
            <version>2.0</version>
        </dependency>
        <dependency>
            <id>commons-collections</id>
            <version>2.1</version>
        </dependency>
        <dependency>

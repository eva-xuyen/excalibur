        <!-- dependencies for container -->
        <dependency>
          <groupId>avalon-framework</groupId>
          <artifactId>avalon-framework-api</artifactId>
          <version>4.1.5</version>
        </dependency>
        <dependency>
          <groupId>avalon-framework</groupId>
